<odoo>
    <record id="action_view_events" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">event</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_events_list" name="Eventos contimatic" parent="settings_menu" action="action_view_events"/>
    <data>

        <record id="view_events_tree" model="ir.ui.view">
            <field name="name">events.tree</field>
            <field name="model">event</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="description"/>
                    <field name="number"/>
                    <field name="credit_debit"/>
                    <field name="measurement_unit"/>
                </tree>
            </field>
        </record>

        <record id="view_events_form" model="ir.ui.view">
            <field name="name">events.form</field>
            <field name="model">event</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="number"/>
                            <field name="description"/>
                            <field name="measurement_unit"/>
                            <field name="credit_debit"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>