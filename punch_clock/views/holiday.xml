<odoo>
    <record id="feriado_action" model="ir.actions.act_window">
        <field name="name">feriado_action</field>
        <field name="res_model">holiday</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="feriado_menu" name="Feriado" parent="settings_menu" action="feriado_action"/>

    <record id="feriado_tree" model="ir.ui.view">
        <field name="name">Feriado</field>
        <field name="model">holiday</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="employees_ids"/>
                <field name="inicial_date"/>
                <field name="final_date"/>
            </tree>
        </field>
    </record>

    <record id="feriado_form_view" model="ir.ui.view">
        <field name="name">Feriado</field>
        <field name="model">holiday</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="employees_ids">
                                <tree limit="7">
                                    <field name="name"/>
                                    <field name="department_id"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="inicial_date"/>
                            <field name="final_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>