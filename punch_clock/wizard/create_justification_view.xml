<odoo>
    <record id="wizard_create_justification_form" model="ir.ui.view">
        <field name="name">Justificativa manual</field>
        <field name="model">create.justification</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                </group>
                <footer>
                    <button name="create_justification" class="btn btn-primary" string="Criar"
                        type="object"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
