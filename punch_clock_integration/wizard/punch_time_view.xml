<odoo>
    <record id="punch_time_action" model="ir.actions.act_window">
        <field name="name">Pesquisa</field>
        <field name="res_model">punch.time</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="punch_time_form" model="ir.ui.view">
        <field name="name">Pesquisa</field>
        <field name="model">punch.time</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="employee_id"/>
                        <field name="punch_clock_ids" widget="many2many_tags"/>
                        <field name="week_day"/>
                        <field name="button_attrs_bool" invisible="1"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="daily_hours"/>
                        <field name="justification_id"/>
                        <field name="remoteness_id" options="{'no_open':True}"/>
                    </group>
                </group>
                <footer>
                    <button name="add_justification" type="object" string="Adicionar Justificativa" class="btn btn-primary"
                            attrs="{'invisible':[('button_attrs_bool','=',False)]}"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="manual_point_action" model="ir.actions.act_window">
        <field name="name">Pesquisa</field>
        <field name="res_model">manual.point</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>