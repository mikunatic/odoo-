<odoo>
    <record id="punch_time_action" model="ir.actions.act_window">
        <field name="name">Pesquisa</field>
        <field name="res_model">punch.time</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <record id="punch_time_form" model="ir.ui.view">
        <field name="name">Pesquisa</field>
        <field name="model">punch.time</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="employee_id"/>
                        <field name="punch_clock_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="week_day"/>
                        <field name="date"/>
                        <field name="daily_hours"/>
                    </group>
                </group>
                <footer>
                    <button name="add_punch" string="Adicionar Ponto Manual"
                            type="object" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="manual_point_form_view" model="ir.ui.view">
        <field name="name">Ponto Manual</field>
        <field name="model">manual.point</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="hour"/>
                </group>
                <footer>
                    <button name="confirm" type="object" string="Adicionar"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="manual_point_action" model="ir.actions.act_window">
        <field name="name">Pesquisa</field>
        <field name="res_model">manual.point</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>