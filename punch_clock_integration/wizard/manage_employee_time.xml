<odoo>
    <record id="manage_employee_time_action" model="ir.actions.act_window">
        <field name="name">Pesquisa de ponto</field>
        <field name="res_model">manage.employee.time</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="manage_employee_time_menu" name="Pesquisa de ponto" parent="punch_clock_form_menu" action="manage_employee_time_action"/>

    <record id="manage_employee_time_form" model="ir.ui.view">
        <field name="name">Pesquisa de ponto</field>
        <field name="model">manage.employee.time</field>
        <field name="arch" type="xml">
            <form>
                <center>
                    <h2>Pesquise o colaborador</h2>
                </center>
                <group>
                    <group>
                        <field name="filter" required="1"/>
                        <field name="monthly_hours" attrs="{'invisible':[('attrs_bool','=',False)]}" />
                        <field name="ideal_hours" attrs="{'invisible':[('attrs_bool','=',False)]}" readonly="1"/>
                        <field name="debtor_hour" attrs="{'invisible':[('attrs_bool','=',False)]}" readonly="1"/>
                    </group>
                    <group>
                        <field name="day_to_search" attrs="{'invisible':['|',('filter','=',False),('filter','=','month')]}"/>
                        <field name="last_day" attrs="{'invisible':['|','|',('filter','=','day'),('filter','=','month'),('filter','=',False)]}"/>
                        <field name="employee_id" attrs="{'invisible':['|','|',('filter','=','range'),('filter','=','day'),('filter','=',False)],'required':[('filter','=','month')]}"
                               options="{'no_open':True,'no_create_edit':True,'no_create':True}"/>
                        <field name="month" attrs="{'invisible':[('filter','!=','month')],'required':[('filter','=','month')]}"/>
                        <field name="year" attrs="{'invisible':[('filter','!=','month')],'required':[('filter','=','month')]}"/>
                        <field name="attrs_bool" invisible="1"/>

                    </group>
                </group>
                <group>
                    <field name="punch_time_ids" readonly="1" attrs="{'invisible':[('punch_time_ids','=',[])]}" nolabel="1">
                        <tree>
                            <field name="employee_id" />
                            <field name="date" attrs="{'column_invisible': [('parent.filter', '=', 'day')]}" />
                            <field name="punch_clock_ids" widget="many2many_tags"/>
                            <field name="week_day" widget="badge"/>
                            <field name="justification_id"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="search_employee_punch" class="btn btn-primary" string="Pesquisar"
                        type="object" attrs="{'invisible':[('filter','=', 'week')]}"/>
                    <button name="search_employee_wrong_time" class="btn btn-primary" string="Pesquisar"
                            type="object" attrs="{'invisible':[('filter','!=', 'week')]}"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
