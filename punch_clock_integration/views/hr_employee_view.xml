<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="employee_extension_form_view" model="ir.ui.view">
        <field name="name">employee_extension_form_view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='job_id']" position="replace">
                <field name="employee_pis"/>
                <field name="company" options="{'no_open':True,'no_create_edit':True}"/>
                <field name="function_id" options="{'no_open':True,'no_create_edit':True}"/>
                <field name="workday_ids">
                    <tree editable="1">
                        <field name="week_days_id" />
                        <field name="hour_ids" widget="many2many_tags"/>
                    </tree>
                </field>
                <field name="syndicate_id" options="{'no_open':True,'no_create_edit':True}"/>
                <field name="overnight_stay" options="{'no_open':True,'no_create_edit':True}"/>
            </xpath>
        </field>
    </record>
</odoo>